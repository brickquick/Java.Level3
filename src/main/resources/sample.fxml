<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextArea?>

<VBox fx:id="mainBox" alignment="center" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lesson4.homework4.ClientFX.Controller">
    <HBox fx:id="topPanel" alignment="CENTER_RIGHT">
        <TextField fx:id="loginField" HBox.hgrow="ALWAYS" onAction="#focusFieldPass" text="login2"/>
        <TextField fx:id="passField" HBox.hgrow="ALWAYS" onAction="#openConnectionFromPassField" text="pass2"/>
        <Button fx:id="authBtn" HBox.hgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity" onAction="#onAuthClick" text="Authentication" />
    </HBox>

    <TextArea fx:id="chatArea" editable="false" VBox.vgrow="ALWAYS"/>

    <HBox alignment="CENTER_RIGHT">
        <TextField fx:id="inputTextField" HBox.hgrow="ALWAYS" onAction="#sendMessage"/>
        <Button fx:id="send" onAction="#sendMessage" text="Отправить >" />
    </HBox>
</VBox>
